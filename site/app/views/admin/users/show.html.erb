<% content_for :title_header, 'Users' %>

<div class="row">
  <div class="col-md-12">
    <%= render_tws_breadcrumbs %>
  </div>
</div>

<div id="toolbar" class="row">
  <div class="col-md-6">
    <%= link_to 'Back', admin_users_path, :class => 'btn btn-default prev-arrow' %>
  </div>
  <div class="col-md-6 align-right">
    <%= link_to 'Delete', admin_user_path(@user), :class => 'btn btn-danger', :method => :delete, data: {:confirm => 'Are you sure?'} %>
    <%= link_to 'Edit', edit_admin_user_path(@user), :class => 'btn btn-warning' %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <p>
      <b>Email:</b>
      <%= @user.email %>
    </p>
  </div>
</div>
